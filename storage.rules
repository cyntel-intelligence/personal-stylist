rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isValidImageFile() {
      return request.resource.contentType.matches('image/.*')
          && request.resource.size < 10 * 1024 * 1024; // 10MB limit
    }

    function isValidFileName() {
      return request.resource.name.size() < 200; // Reasonable filename length
    }

    // User uploaded images - users can only access their own images
    match /images/{userId}/{category}/{fileName} {
      // Allow read if authenticated and is the owner
      allow read: if isOwner(userId);

      // Allow create if authenticated, is owner, valid image, and valid filename
      allow create: if isOwner(userId)
                    && isValidImageFile()
                    && isValidFileName()
                    && category in ['dress', 'shoes', 'bag', 'outerwear', 'jewelry'];

      // Allow update if authenticated and is owner
      allow update: if isOwner(userId)
                    && isValidImageFile();

      // Allow delete if authenticated and is owner
      allow delete: if isOwner(userId);
    }

    // Thumbnails and optimized versions
    match /images/{userId}/{category}/thumbnails/{fileName} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId)
                    && isValidImageFile()
                    && category in ['dress', 'shoes', 'bag', 'outerwear', 'jewelry'];
      allow delete: if isOwner(userId);
    }

    match /images/{userId}/{category}/optimized/{fileName} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId)
                    && isValidImageFile()
                    && category in ['dress', 'shoes', 'bag', 'outerwear', 'jewelry'];
      allow delete: if isOwner(userId);
    }

    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
